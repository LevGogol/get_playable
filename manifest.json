{
  "name": "Get playable",
  "version": "1.1",
  "description": "Adds a button in the bottom-right corner to copy playable ad links. Works on SensorTower and AppMagic",
  "manifest_version": 3,
  "permissions": ["activeTab", "tabs"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["*://*.sensortower.com/*", "*://*.appmagic.rocks/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
